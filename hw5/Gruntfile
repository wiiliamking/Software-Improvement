

rts = function(grunt) {

  // Project configuration.
  grunt.initConfig({
    pkg: grunt.file.readJSON('package.json'),
    src: {
      files: {
        'views/bin/js/<%= pkg.name %>.js': 'views/src/ls/<%= pkg.name %>.ls', // 1:1 compile
      }
    }
  });

  // 加载包含 "uglify" 任务的插件。
  grunt.loadNpmTasks('grunt-livescript');

  // 默认被执行的任务列表。
  grunt.registerTask('default', ['livescript']);

};
